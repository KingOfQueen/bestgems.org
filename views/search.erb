<div class="container-narrow">
	<div class="masthead">
		<ul class="nav nav-pills pull-right">
			<li><a href="/">Top</a></li>
			<li><a href="/total">Total</a></li>
			<li><a href="/daily">Daily</a></li>
			<li><a href="/about">About</a></li>
			<li><a href="/featured">Featured</a></li>
			<li>
				<form class="form-search" action="/search" method="GET">
					<input type="text" class="input-medium search-query" name="q">
					<button type="submit" class="btn"><i class="icon-search"></i></button>
				</form>
			</li>
		</ul>
		<h3><a href="/" class="header">BestGems</a></h3>
	</div>
	<hr>
	<div class="span12">
		<p><em class="number"><%= @start %></em>-<em class="number"><%= @end %></em> of <em class="number"><%= comma(@count) %></em> resuts for <em class="number">"<%= @q %>"</em></p>
		<table class="table table-striped">
			<tr><th>Total Rank</th><th>Total Downloads</th><th>Name</th><th>Summary</th></tr>
			<% @gems.each{|gem| %>
			<tr><td class="right"><%= comma(gem[:rank]) %></td><td class="right"><%= comma(gem[:downloads]) %></td><td><%= link(gem[:name]) %></td><td><%= gem[:summary] %></td></tr>
			<% } %>
		</table>
			<div style="font-size:18px;" class="text-center pagination">
				<% pager = Pager.new(@path, @opts, @range, @page) %>
				<ul>
				<% p @opts %>
				<% p @page %>
				<%= pager.previous(@page - 1) %>
				<% pager.each{|elm| %>
				  <%= elm %>
				<% } %>
				<%= pager.next(@page + 1) %>
				</ul>
			</div>
	</div>

	<div class="row">
		<script type="text/javascript"><!--
		google_ad_client = "ca-pub-8257359908391644";
		/* bestgems_bottom */
		google_ad_slot = "4115061810";
		google_ad_width = 728;
		google_ad_height = 90;
		//-->
		</script>
		<script type="text/javascript"
		src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
		</script>
	</div>
</div>
