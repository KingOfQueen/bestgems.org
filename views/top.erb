<div class="container-narrow">
	<div class="masthead">
		<ul class="nav nav-pills pull-right">
			<li class="active"><a href="/">Top</a></li>
			<li><a href="/total">Total</a></li>
			<li><a href="/daily">Daily</a></li>
			<li><a href="/featured">Featured</a></li>
			<li><a href="/about">About</a></li>
			<li>
				<form class="form-search" action="/search" method="GET">
					<input type="text" class="input-medium search-query" name="q">
					<button type="submit" class="btn"><i class="icon-search"></i></button>
				</form>
			</li>
		</ul>
		<h3><a href="/" class="header">BestGems</a></h3>
	</div>

	<hr>

	<div class="jumbotron">
		<h1 class="logo">BestGems</h1>
		<p class="lead">Ruby gems download ranking. Find the best gem package for you!</p>
    <p>BestGems.org is <a href="https://github.com/xmisao/bestgems.org">opensouce</a>. Please, contribute!</p>
	</div>

	<hr>

	<div class="row-fluid marketing">
		<div class="span6">
			<h4><a href="/total">Total Downloads Ranking</a></h4>
			<table class="table table-striped">
				<tr><th>Rank</th><th>Downloads</th><th>Name</th></tr>
				<% @total_gems.each{|gem| %>
				<tr><td class="center"><%= comma(gem[:rank]) %></td><td class="center"><%= comma(gem[:downloads]) %></td><td><a href="/gems/<%= gem[:name]%>"><%= gem[:name] %></a></td></tr>
				<% } %>
			</table>
			<p class="text-right"><a class="btn" href="/total">more...</a></p>
		</div>
		<div class="span6">
			<h4><a href="/daily">Daily Downloads Ranking</a></h4>
			<table class="table table-striped">
				<tr><th>Rank</th><th>Downloads</th><th>Name</th></tr>
				<% @daily_gems.each{|gem| %>
				<tr><td class="center"><%= comma(gem[:rank]) %></td><td class="center"><%= comma(gem[:downloads]) %></td><td><a href="/gems/<%= gem[:name]%>"><%= gem[:name] %></a></td></tr>
				<% } %>
			</table>
			<p class="text-right"><a class="btn" href="/daily">more...</a></p>
		</div>
	</div>
	<div class="row-fluid marketing">
		<div class="span6">
			<h4><a href="/featured">Featured Gems Ranking</a></h4>
			<table class="table table-striped">
				<tr><th>Rank</th><th>Diff</th><th>Daily Rank</th><th>Total Rank</th><th>Name</th></tr>
				<% @featured_gems.each{|gem| %>
				<tr><td class="center"><%= comma(gem[:rank]) %></td><td class="center"><%= comma_pm(gem[:rank_diff]) %></td><td class="center"><%= comma(gem[:daily_rank]) %></td><td class="center"><%= comma(gem[:total_rank]) %></td><td><a href="/gems/<%= gem[:name]%>"><%= gem[:name] %></a></td></tr>
				<% } %>
			</table>
			<p class="text-right"><a class="btn" href="/featured">more...</a></p>
		</div>
		<div class="span6">
			<h4>Statistics</h4>
			<table class="table table-striped">
				<tr><th>#</th><th>Title</th></tr>
				<tr><td class="center">1</td><td><a href="/stat/gems">Number of All Gems</a></td></tr>
				<tr><td class="center">2</td><td><a href="/stat/download">Download Trends of All Gems</a></td></tr>
			</table>
			<h4>Reports</h4>
			<table class="table table-striped">
				<tr><th>Title</th><th>Summary</th></tr>
				<% @reports.each{|report| %>
				<tr><td><a href="/reports/<%= report[:url] %>"><%= report[:name] %></td><td><%= report[:summary] %></td></tr>
					<% } %>
			</table>
		</div>
	</div>
